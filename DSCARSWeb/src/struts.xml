<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />

	<package name="default" extends="struts-default" namespace="/">	  
	    <action name="login" class="edu.gatech.omscs.dscars.action.SecurityAction"  method="authenticate">
			<result name="studentPreference" type="redirectAction">
        		<param name="actionName">studentPreference</param>
    		</result>
			<result name="admin">admin.jsp</result>
			<result name="professor">professor.jsp</result>
			<result name="TA">TA.jsp</result>
			<result name="error">login.jsp</result>
			<result name="success" type="chain">index</result>
		</action>
		  
	   <action name="studentPreference" class="edu.gatech.omscs.dscars.action.StudentPreferenceAction"  method="execute">
			<result name="success">student.jsp</result>
			<result name="error">student.jsp</result>
			<result name="input">student.jsp</result>
		</action>
		
	  	<action name="logoff" class="edu.gatech.omscs.dscars.action.SecurityAction"  method="logoff">
			<result name="success">login.jsp</result>
		</action>
		
		<action name="index">
			<result name="success">index.jsp</result>
		</action>
	</package>
</struts>
